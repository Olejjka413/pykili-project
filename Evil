import pygame
import random
pygame.init()
FPS = 30
sc = pygame.display.set_mode((600,400),pygame.RESIZABLE)
clock = pygame.time.Clock()
while 1:
    for i in pygame.event.get():
        if i.type == pygame.QUIT:
            pygame.quit()
    a = random.randrange(0,400)
    b = random.randrange(0,255)
    c = random.randrange(0,255)
    d = random.randrange(0,255)
    f = random.randrange(0,600)
    pygame.draw.circle(sc,(b,c,d), (f, a), 50)
    clock.tick(FPS)
    pygame.display.update() 

